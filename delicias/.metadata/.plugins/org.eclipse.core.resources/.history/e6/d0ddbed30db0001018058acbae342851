package com.senai.delicias.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.senai.delicias.entities.Produto;
import com.senai.delicias.entities.TipoProduto;
import com.senai.delicias.repositories.TipoProdutoRepository;

@Service
public class TipoProdutoService {

    @Autowired
    private TipoProdutoRepository tipoProdutoRepository;

    public TipoProduto saveTipoProduto(TipoProduto tipoProduto) {
        return tipoProdutoRepository.saveAll(tipoProduto);
    }

    public List<Produto> getAlltipoProduto() {
        return tipoProdutoRepository.findAll();
    }

    public Produto getTipoProdutoById(Long id) {
        return tipoProdutoRepository.findById(id).orElse(null);
    }

    public void deleteTipoProduto(Long id) {
        tipoProdutoRepository.deleteById(id);
    }

	public Object findAll() {
		// TODO Auto-generated method stub
		return null;
	}

}